{
    "name": "@paulhalleux/react-boilerplate",
    "version": "0.1.0",
    "description": "A boilerplate to quickly create react projects",
    "repository": "https://github.com/paulhalleux/react-boilerplate",
    "author": "Paul Halleux",
    "license": "MIT",
    "scripts": {
        "publish:local": "yarn publish --registry https://pkg.paulhalleux.be",
        "start": "react-scripts start",
        "build": "react-scripts build",
        "cy:open": "cypress open"
    },
    "dependencies": {
        "@paulhalleux/eslint-config": "^0.0.1-beta.6",
        "@paulhalleux/react-components": "^0.1.3-beta.28",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-error-overlay": "6.0.9",
        "react-query": "^3.34.18",
        "react-scripts": "4.0.3",
        "remove": "^0.1.5",
        "tsify": "^5.0.4",
        "typescript": "^4.5.5"
    },
    "devDependencies": {
        "@babel/core": "^7.17.8",
        "@babel/preset-env": "^7.16.11",
        "@babel/preset-react": "^7.16.7",
        "@types/cypress-cucumber-preprocessor": "^4.0.1",
        "@types/react": "^17.0.39",
        "@types/react-dom": "^17.0.11",
        "cypress": "^9.5.0",
        "cypress-cucumber-preprocessor": "^4.3.1",
        "eslint-plugin-simple-import-sort": "^7.0.0",
        "sass": "^1.49.9"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "cypress-cucumber-preprocessor": {
        "nonGlobalStepDefinitions": true,
        "commonPath": "cypress/common"
    },
    "eslintConfig": {
        "extends": [
            "@paulhalleux/eslint-config"
        ]
    },
    "presets": [
        "@babel/preset-env",
        "@babel/preset-react"
    ],
    "resolutions": {
        "react": "17.0.2",
        "react-dom": "17.0.2"
    }
}
